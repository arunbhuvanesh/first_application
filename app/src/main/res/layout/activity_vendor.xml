<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:paddingLeft="7dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/textview"
            android:textSize="@dimen/textviewsize"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/v_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="17dp"
                android:drawableLeft="@drawable/ic_person"
                android:drawableTint="@color/hint"
                android:drawablePadding="7dp"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:fontFamily="@font/lato_regular"
                style="@style/CustomEdittextStyle"
                android:textColorHint="@color/hint"
                android:hint="Name" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/textview"
            android:textSize="@dimen/textviewsize"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/v_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="17dp"
            android:drawableLeft="@drawable/ic_company1"
            android:drawableTint="@color/hint"
            android:drawablePadding="7dp"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:fontFamily="@font/lato_regular"
            style="@style/CustomEdittextStyle"
            android:textColorHint="@color/hint"
            android:hint="Company name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textview"
            android:textSize="@dimen/textviewsize"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/v_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_company"
            android:drawableTint="@color/hint"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="17dp"
            android:singleLine="true"
            android:inputType="text"
            style="@style/CustomEdittextStyle"
            android:textColorHint="@color/hint"
            android:hint="Address" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/textview"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/textviewsize"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/v_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone"
            android:drawableTint="@color/hint"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="7dp"
            android:singleLine="true"
            android:inputType="phone"
            android:fontFamily="@font/lato_regular"
            style="@style/CustomEdittextStyle"
            android:textColorHint="@color/hint"
            android:hint="Phone number" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/textview"
            android:textSize="@dimen/textviewsize"
            android:layout_marginLeft="5dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/v_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email"
            android:drawableTint="@color/hint"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/lato_regular"
            style="@style/CustomEdittextStyle"
            android:textColorHint="@color/hint"
            android:hint="Email" />
        <TextView
            android:id="@+id/textemail"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/v_save"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@drawable/rounded_button"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />


    </LinearLayout>
`
    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressbar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:progressDrawable="@drawable/progressbar"/>


</RelativeLayout>