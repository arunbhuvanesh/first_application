<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.PurchaseUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="140dp"
                android:progressDrawable="@drawable/progressbar" />

            <ImageView
                android:id="@+id/titleimage"
                android:layout_below="@id/subtitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:background="#90000000"
                android:scaleType="centerCrop"
                android:src="@drawable/s3"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Customer Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/yourcardi1"
                        android:layout_width="230dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="20dp"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">
                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/cname"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:hint="Customer name" />
                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:id="@+id/doclickAdd"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:src="@drawable/ic_add_tag1" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Item"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:id="@+id/yourcardi"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:elevation="1dp"
                    app:cardCornerRadius="20dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                <Spinner
                    android:id="@+id/item"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="choose items"></Spinner>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/itemclick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="selected items"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Quantity"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/quantity"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_item_tag"
                    android:drawableTint="@color/hint"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Sales Quantity"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Date"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/date"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:drawableLeft="@drawable/ic_date"
                    android:drawableTint="@color/hint"
                    android:ems="10"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Sales Date"
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColorHint="@color/hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Sales Amount"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/salesprice"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_pricetag"
                    android:drawableTint="@color/hint"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Sales Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColorHint="@color/hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Debit Amount"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/debit_amt"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_pricetag"
                    android:drawableTint="@color/hint"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Debit Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColorHint="@color/hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Balance Amount"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/textview"
                    android:textSize="@dimen/textviewsize"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/balance_amt"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_pricetag"
                    android:drawableTint="@android:color/holo_red_light"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Balance Amount"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColorHint="@color/hint" />


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/salesentry"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="105dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@android:color/white"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColorHint="@color/hint" />


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>