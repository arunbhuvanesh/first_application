<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipelayout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="4dp"
    app:leftEdgeSwipeOffset="0dp"
    app:rightEdgeSwipeOffset="0dp">

    <RelativeLayout
        android:id="@+id/bottom_wraper"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:weightSum="2">

        <ImageView
            android:id="@+id/editicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_edit" />


        <ImageView
            android:id="@+id/deleteicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/editicon"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_wrapper1"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <Switch
            android:id="@+id/btnLocation"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:checked="false"
            android:text="switch"
            android:layout_centerHorizontal="true"
            android:textOn="On"
            android:textOff="Off"
            android:textColor="#f00"
            android:textSize="25sp"
            android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/person" />

            <TextView
                android:id="@+id/cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/image"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="2dp"
                android:text="arun"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cname"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/image"
                android:drawableLeft="@drawable/ic_company1"
                android:drawablePadding="2dp"
                android:drawableTint="#000000"
                android:paddingBottom="1dp"
                android:text="abc export"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/carea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/caddress"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/image"
                android:drawableLeft="@drawable/ic_company"
                android:drawableTint="#000000"
                android:paddingLeft="2dp"
                android:paddingBottom="1dp"
                android:text="abc export"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/cemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/carea"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/image"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="2dp"
                android:drawableTint="#000000"
                android:paddingBottom="1dp"
                android:text="abc"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/cphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_toRightOf="@id/image"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableTint="#000000"
                android:paddingBottom="1dp"
                android:text="10000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@id/image"
                android:drawableLeft="@drawable/ic_ref"
                android:paddingBottom="1dp"
                android:text="10000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginLeft="30dp"
                android:text="001" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>
