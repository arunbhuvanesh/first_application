<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    tools:context=".activites.updateSalesEntry">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:progressDrawable="@drawable/progressbar" />
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Product Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/textviewsize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/textview"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="@dimen/textviewsize"
                android:textStyle="bold" />


                <TextView
                    android:id="@+id/cname"
                    android:textSize="@dimen/textviewsize"
                    android:fontFamily="@font/lato_regular"
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="5dp"
                    android:hint="Customer Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/textview"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:hint="Item Name"
                android:fontFamily="@font/lato_regular"
                android:layout_width="match_parent"
                android:layout_height="30dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:fontFamily="@font/lato_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_item_tag"
                android:drawableTint="@color/hint"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:inputType="number"
                android:fontFamily="@font/lato_regular"
                style="@style/CustomEdittextStyle"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/textviewsize"
                android:hint="Sales Quantity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:fontFamily="@font/lato_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date"
                android:drawableTint="@color/hint"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:clickable="true"
                style="@style/CustomEdittextStyle"
                android:textColorHint="@color/hint"
                android:hint="Sales Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Amount"
                android:fontFamily="@font/lato_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/salesprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pricetag"
                android:drawableTint="@color/hint"
                android:fontFamily="@font/lato_regular"
                android:layout_marginRight="5dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                style="@style/CustomEdittextStyle"
                android:textColorHint="@color/hint"
                android:hint="Sales Amount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit Amount"
                android:fontFamily="@font/lato_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/debit_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pricetag"
                android:drawableTint="@color/hint"
                android:layout_marginRight="5dp"
                android:inputType="numberDecimal"
                android:singleLine="true"
                style="@style/CustomEdittextStyle"
                android:textColorHint="@color/hint"
                android:hint="Debit Amount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance Amount"
                android:fontFamily="@font/lato_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:singleLine="true"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/balance_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pricetag"
                android:drawableTint="@android:color/holo_red_light"
                android:layout_marginRight="5dp"
                android:inputType="numberDecimal"
                android:fontFamily="@font/lato_regular"
                android:clickable="true"
                style="@style/CustomEdittextStyle"
                android:textColorHint="@color/hint"
                android:singleLine="true"
                android:hint="Balance Amount" />

            <EditText
                android:focusable="true"
                android:id="@+id/hidebalance"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/salesentry"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_button"
                android:text="Save"
                android:fontFamily="@font/lato_bold"
                android:singleLine="true"
                android:textColorHint="@color/hint"
                android:textColor="@android:color/white"
                android:textAllCaps="false" />
        </LinearLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>