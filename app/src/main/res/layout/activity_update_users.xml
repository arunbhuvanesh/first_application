<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activites.updateUsers">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/user"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user"
                android:layout_marginBottom="10dp"
                android:hint="User name" />

            <EditText
                android:id="@+id/cid"
                android:layout_width="27dp"
                android:layout_height="27dp" />


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user"
                android:text="Address"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/address"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:layout_alignParentStart="true"
                android:hint="Address" />


            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/userimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="54dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="27dp"
                android:layout_toStartOf="@id/user"
                />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:layout_below="@id/address"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/area"
                android:layout_below="@id/tv_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area" />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/area"
                android:text="Email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_below="@id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />
            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:text="Mobile"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mobile"
                android:hint="Phone number" />
            <TextView
                android:id="@+id/tv_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:text="Reference"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/reference"
                android:layout_below="@id/tv_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reference" />

            <TextView
                android:id="@+id/tv_refph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reference"
                android:text="Ref.Mobile"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/textview"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/Refphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_refph"
                android:hint="Phone number" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/save"
                android:layout_below="@id/Refphone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_button2"
                android:text="Save"
                android:textAllCaps="false" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>