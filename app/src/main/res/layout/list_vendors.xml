<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <TextView
                android:id="@+id/vname"
                style="@style/CustomEdittextStyle2"
                android:layout_width="150dp"
                android:layout_height="18dp"
                android:layout_marginBottom="7dp"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:drawableTint="@color/hint"
                android:text="arun"
                android:textAllCaps="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/cname"
                style="@style/CustomEdittextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vname"
                android:layout_marginBottom="7dp"
                android:drawableLeft="@drawable/ic_company1"
                android:drawableTint="@color/hint"
                android:text="abc export"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/vaddres"
                style="@style/CustomEdittextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cname"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="7dp"
                android:drawableLeft="@drawable/ic_company"
                android:drawableTint="@color/hint"
                android:paddingBottom="1dp"
                android:text="40 kumaran street,Nalliyam palayam"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/vph"
                style="@style/CustomEdittextStyle2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@id/vaddres"
                android:drawableLeft="@drawable/ic_phone"
                android:drawableTint="@color/hint"
                android:text="8546791230"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/vmail"
                style="@style/CustomEdittextStyle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vph"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawableTint="@color/hint"
                android:text="arunbhuvanesh29@gmail.com"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/vname"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tabicon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_tag" />




                <ImageView
                    android:id="@+id/deleteicon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/editicon"
                    android:src="@drawable/ic_delete" />


            </LinearLayout>

            <ImageView
                android:layout_marginTop="110dp"
                android:id="@+id/editicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="300dp"
                android:src="@drawable/ic_edit" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

