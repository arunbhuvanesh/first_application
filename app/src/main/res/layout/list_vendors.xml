<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/swipelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/bottom_wraper"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:weightSum="2">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/editicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_edit" />


        <ImageView
            android:id="@+id/deleteicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/editicon"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_wrapper1"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:weightSum="1">

    <ImageView
        android:id="@+id/tabicon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_tag" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/vname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:drawableTint="#000000"

                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="arun"
                android:textAllCaps="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_company1"
                android:drawablePadding="10dp"
                android:drawableTint="#000000"
                android:paddingBottom="1dp"
                android:text="abc export"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/vaddres"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_company"
                android:drawablePadding="10dp"
                android:drawableTint="#000000"
                android:paddingBottom="1dp"
                android:text="arun st"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/vph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:drawableTint="#000000"
                android:text="8546791230"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/vmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:drawableTint="#000000"
                android:text="sample@gmail.com"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</com.daimajia.swipe.SwipeLayout>